#!/bin/bash

set -e
test -d "$(PWD)"

url="https://github.com/horta/timeout/releases/download/v0.0.2/timeout-0.0.2.tar.gz"
sha256=d636bc07b4d3ef26af6c8b785a97975d39bbd0bc8af2cbcb26f054583a7ec150
tmpdir=$(PWD)/.eviltest

rm -rf "$tmpdir"
mkdir -p "$tmpdir"

function cleanup {
    rm -rf "$tmpdir"
}
trap cleanup EXIT

cd "$tmpdir"
tardir=$(unpack_from_url "$url" "$sha256")
cd "$tardir"
PREFIX=$HOME/.bats make install
