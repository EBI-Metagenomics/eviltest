#!/bin/bash

set -e
test -d "$(PWD)"

url="https://github.com/horta/daemonize/releases/download/v0.1.4/daemonize-0.1.4.tar.gz"
sha256=8cc2c8d0b3b299fe8fd5f4b76b260a03ce6a57102e5c3cafc1c089275e60634f
tmpdir=$(PWD)/.eviltest

rm -rf "$tmpdir"
mkdir -p "$tmpdir"

function cleanup {
    rm -rf "$tmpdir"
}
trap cleanup EXIT

cd "$tmpdir"
tardir=$(unpack_from_url "$url" "$sha256")
cd "$tardir"
PREFIX=$HOME/.bats make install
